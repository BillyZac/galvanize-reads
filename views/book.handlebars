<h1>{{ book.title }}</h1>
<p class="book-id" data-id={{ book.id }}>
  ID: {{ book.id }}
</p>
<p>
  Genre: {{ book.genre }}
</p>
<p>
  Description: {{ book.description }}
</p>
<p>
  Cover url: {{ book.cover_url }}
</p>
<button class="edit" type="button" name="button">Edit</button>
<hr>

<label for="title">Title</label>

<input class="title" type="text" name="title" value="{{ book.title }}">
<input class="id" type="text" name="id">

<button class="save-edit" type="button" name="save-edit">Save changes</button>
