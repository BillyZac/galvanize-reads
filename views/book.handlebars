<h1>{{ book.title }}</h1>
<p class="book-id" data-id={{ book.id }}>
  ID: {{ book.id }}
</p>
<p>
  Genre: {{ book.genre }}
</p>
<p>
  Description: {{ book.description }}
</p>
<p>
  Cover url: {{ book.cover_url }}
</p>
<button class="edit" type="button" name="button">Edit</button>
<hr>

<label for="title">Title</label>
<input class="title" type="text" name="title" value="{{ book.title }}">
<br>
<br>
<label for="genre">Genre</label>
<input class="genre" type="text" name="genre" value="{{ book.genre }}">
<br>
<br>
<label for="description">Description</label>
<input class="description" type="text" name="description" value="{{ book.description }}">
<br>
<br>
<label for="cover-url">Cover url</label>
<input class="cover-url" type="text" name="cover-url" value="{{ book.cover_url }}">
<br>
<br>
<button class="save-edit" type="button" name="save-edit">Save changes</button>
<div class="message">
  
</div>
